<Window x:Class="JsonValidator_v2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JsonValidator_v2._0"
        mc:Ignorable="d"
         Title="JsonValidator" Height="700" MaxHeight="700" MinHeight="700" Width="500" MaxWidth="500" MinWidth="500">
    <Grid x:Name="layoutGrid" Background="White">

        <TextBlock x:Name="textblock"
            Width="300"
            Height="30"
            Background="White"
            VerticalAlignment="Top"
            Margin="32"
            TextAlignment="Center" 
            LineHeight="20"
            FontSize="20"
            FontWeight="DemiBold"
            Text="Input JSON to check it."
            />
        
        <TextBox x:Name="textbox"
            Width="430" Height="540" 
            TextChanged="ParseJSON"
            AcceptsReturn="True"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto" 
            FontWeight="DemiBold"
            FontSize="13"
            BorderThickness="5"               
                 />
    </Grid>
</Window>
